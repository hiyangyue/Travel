<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_width="250dp"
        android:layout_height="300dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:src="@drawable/test_profile"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <com.yueyang.travel.view.wiget.CircleImageView
            android:id="@+id/holder_profile_avatar"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_default_avatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/white"/>

        <TextView
            android:text="Alis Wang"
            android:id="@+id/holder_profile_nickname"
            android:textSize="22sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_20"
            android:layout_below="@+id/holder_profile_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:text="alis' zhou"
            android:id="@+id/holder_profile_username"
            android:layout_below="@+id/holder_profile_nickname"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="关注"
            android:layout_below="@+id/holder_profile_username"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</android.support.v7.widget.CardView>